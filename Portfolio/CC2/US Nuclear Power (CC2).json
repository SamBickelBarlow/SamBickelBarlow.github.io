{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "US Nuclear Power Generation",
    "anchor": "start",
    "subtitle": "Output per hours (GwH)",
    "fontSize": "20",
    "subtitleFontSize": "-2",
    "color": "#15c615",
    "subtitleColor": "#000000"
  },
  "height": "300",
  "width": "445",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "background": "#d9d9d9",
  "view": {
    "fill": "#333333",
    "strokeOpacity": 0
  },
  "data": {
    "url": "https://api.economicsobservatory.com/usa/nGwh?vega",
    "format": {
      "type": "json"
    }
  },
  "mark": {
    "type": "line",
    "color": "#15c615",
    "strokeWidth": "2"
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {
        "title": "Year",
        "titleColor": "#122B39",
        "grid": false
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": {
        "title": "Output per hours (GwH)",
        "titleColor": "#122B39",
        "grid": false
      }
    }
  }
}
