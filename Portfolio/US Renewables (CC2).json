{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "US Renewable Energy Generation",
    "anchor": "start",
    "subtitle": "Output, GWh | IEA via ECO-API",
    "fontSize": 20,
    "subtitleFontSize": 0,
    "color": "#ffff00",
    "subtitleColor": "#000000"
  },
  "height": 300,
  "width": "container",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "background": "#d9d9d9",
  "view": {
    "fill": "#333333",
    "strokeOpacity": 0
  },
  "data": {
    "url": "https://api.economicsobservatory.com/usa/rGWh?vega",
    "format": {
      "type": "json"
    }
  },
  "mark": {
    "type": "line",
    "color": "#ffff00",
    "strokeWidth": 2
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {
        "title": "Year",
        "titleColor": "#122B39",
        "grid": false
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": {
        "title": "Output per hour (GWh)",
        "titleColor": "#122B39",
        "grid": false
      }
    }
  }
}
    }
  }
}
