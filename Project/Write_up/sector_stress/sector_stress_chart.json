{
  "data": {
    "url": "https://raw.githubusercontent.com/SamBickelBarlow/SamBickelBarlow.github.io/refs/heads/main/Project/Write_up/sector_stress/sector_stress_clean_data.csv"
  },
  "height": {"step": 30},
  "width": 400,
  "background": "#f9f9f9",
  "mark": {
    "type": "bar",
    "opacity": 0.85
  },
  "encoding": {
    "y": {
      "field": "Sustainable Development Goals (SDG) Regions",
      "type": "nominal",
      "title": null,
      "axis": {
        "labelFont": "Arial",
        "labelFontSize": 12,
        "titleFont": "Arial",
        "titleFontSize": 14
      },
      "scale": {
        "paddingInner": 0.3,
        "paddingOuter": 0.05
      }
    },
    "x": {
      "field": "share_of_Water_Stress",
      "type": "quantitative",
      "stack": "normalize",
      "title": "Share of Water Stress",
      "axis": {
        "format": ".0%",
        "labelFont": "Arial",
        "labelFontSize": 12,
        "titleFont": "Arial",
        "titleFontSize": 14,
        "grid": true,
        "titleAngle": 0,
        "titleAlign": "left",
        "titleY": -20
      }
    },
    "color": {
      "field": "Contribution to Water Stress",
      "type": "nominal",
      "title": null,
      "scale": {
        "domain": ["Agricultural Sector", "Industrial Sector", "Municipal Sector"],
        "range": ["#aec97e", "#ffb81d", "#73b7d9"]
      },
      "legend": {
        "orient": "right",
        "titleFont": "Arial",
        "titleFontSize": 14,
        "labelFont": "Arial",
        "labelFontSize": 12
      }
    }
  },
  "title": {
    "text": "Contribution to Water Stress by Sector in 2022",
    "subtitle": "Share of Sectoral Contribution to Water Stress by Region",
    "font": "Arial",
    "fontSize": 18,
    "subtitleFont": "Arial",
    "subtitleFontSize": 14,
    "anchor": "start",
    "color": "black"
  },
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "background": "white",
    "axis": {
      "domainColor": "gray",
      "domainWidth": 1,
      "gridColor": "#e6e6e6",
      "gridWidth": 0.8,
      "tickColor": "gray",
      "tickWidth": 1
    }
  }
}
