{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Global Changes in Water Stress",
    "subtitle": "between 2002 and 2022",
    "fontSize": 16,
    "subtitleFontSize": 12,
    "subtitleFontWeight": "lighter",
    "anchor": "left"
  },
  "projection": {"type": "naturalEarth1"},
  "description": "",
  "data": {
    "url": "https://raw.githubusercontent.com/SamBickelBarlow/SamBickelBarlow.github.io/refs/heads/main/Project/Write_up/Water Stress Map/clean_data.csv"
  },
  "width": 500,
  "height": 300,
  "background" : "#f9f9f9" ,
  "params": [
    {
      "name": "metric",
      "value": "Water Stress pct change",
      "bind": {
        "input": "select",
        "options": [
          "Water Stress pct change",
          "Water Stress net change",
          "Water Stress 2022",
          "Water Stress 2002"
        ],
        "name": "Select Metric"
      }
    },
    {
      "name": "scaleDomain",
      "value": [-1, 0 , 1],
      "update": "metric === 'Water Stress 2002' ? [0, 50 , 100] : (metric === 'Water Stress 2022' ? [0, 50 , 100] : (metric === 'Water Stress net change' ? [-50, 0 , 50] : [-1, 0 , 1]))"
    }
  ],
  "transform": [
    {
      "lookup": "ISO3",
      "from": {
        "key": "properties.ISO3",
        "fields": ["type", "geometry", "properties"],
        "data": {
          "url": "https://raw.githubusercontent.com/mclass-user/mclass-user.github.io/refs/heads/main/maps/map_world.geojson",
          "format": {"property": "features"}
        }
      }
    },
    {
      "calculate": "datum[metric]",
      "as": "selectedMetric"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "fill": "lightgrey",
        "strokeWidth": 0.25
      },
      "encoding": {
        "tooltip": [
          {"field": "properties.COUNTRY", "title": "Country"}
        ]
      }
    },
    {
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.25
      },
      "encoding": {
        "color": {
          "field": "selectedMetric",
          "type": "quantitative",
          "scale": {
            "domain": {"expr": "scaleDomain"},
            "range": ["#2D4A9A", "#FFFFFF", "#D14C2F"]
          },
          "legend": {
            "title": "Water Stress Metric",
            "formatType": "custom",
            "labelExpr": "metric === 'Water Stress 2002' || metric === 'Water Stress 2022' ? format(datum.value, '.0f') : (metric === 'Water Stress net change' ? format(datum.value, '.0f') : format(datum.value, '.0%'))"
          }
        },
        "tooltip": [
          {
            "field": "properties.COUNTRY",
            "title": "Country"
          },
          {
            "field": "Water Stress pct change",
            "title": "Pct change in water stress",
            "format": ".1%"
          },
          {
            "field": "Water Stress net change",
            "title": "Net change in water stress",
            "format": ".1f"
          },
          {
            "field": "Water Stress 2022",
            "title": "Water Stress Score in 2022",
            "format": ".1f"
          },
          {
            "field": "Water Stress 2002",
            "title": "Water Stress Score in 2002",
            "format": ".1f"
          }
        ]
      }
    }
  ]
}
