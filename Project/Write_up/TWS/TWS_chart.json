{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Monthly Data Trends by Year with shades of blue",
  "width": 500,
  "height": 300,
  "title": {
    "text": "Terrestrial Water Storage",
    "subtitle": "Sum of water stored underground, in water bodies and in snow and ice",
    "fontSize": 16,
    "subtitleFontSize": 12,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/SamBickelBarlow/SamBickelBarlow.github.io/refs/heads/main/Project/Write_up/GWM-Gap-filled-Global-land-area.csv"
  },
  "background" : "#f9f9f9",
  "transform": [
  {
    "filter": "datum.value != ''"
  },
  {
    "calculate": "split(datum.date, '-')[0]",
    "as": "year"
  },
  {
    "calculate": "split(datum.date, '-')[1]",
    "as": "month"
  },
  {
    "lookup": "month",
    "from": {
      "data": {
        "values": [
          {"month": "01", "month_name": "January"},
          {"month": "02", "month_name": "February"},
          {"month": "03", "month_name": "March"},
          {"month": "04", "month_name": "April"},
          {"month": "05", "month_name": "May"},
          {"month": "06", "month_name": "June"},
          {"month": "07", "month_name": "July"},
          {"month": "08", "month_name": "August"},
          {"month": "09", "month_name": "September"},
          {"month": "10", "month_name": "October"},
          {"month": "11", "month_name": "November"},
          {"month": "12", "month_name": "December"}
        ]
      },
      "key": "month",
      "fields": ["month_name"]
    }
  }
],
  "encoding": {
    "x": {
      "field": "month_name",
      "type": "ordinal",
      "title": "",
      "sort": [
        "January",
        "February",
        "March",
        "April",
        "May",
        "June",
        "July",
        "August",
        "September",
        "October",
        "November",
        "December"
      ],
      "axis": {
        "labelAngle": -45
      }
    },
    "y": {"field": "value", 
          "type": "quantitative", 
          "title": "Difference from 2003-2006 average",
          "axis" : {
            "titleFontSize": 10,
            "titleAngle" :0 ,
            "titlePadding" :80
          }},
    "color": {
      "field": "year",
      "type": "nominal",
      "scale": {"scheme": "blues"},
      "title": ""
    },
    "tooltip": [
      {"field": "year", "type": "nominal", "title": "Year"},
      {"field": "month_name", "type": "ordinal", "title": "Month"},
      {"field": "value", "type": "quantitative", "title": "Storage value", "format": ".2f"}
    ]
  },
  "mark": {
    "type": "line",
    "point": true
  }
}
