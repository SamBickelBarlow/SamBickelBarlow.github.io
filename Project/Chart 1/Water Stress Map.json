{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Global Changes in Water Stress",
    "subtitle": "between 2001 and 2021",
    "fontSize": 16,
    "subtitleFontSize": 12,
    "subtitleFontWeight": "lighter",
    "anchor": "left"
  },
  "projection": {"type": "naturalEarth1"},
  "width": 500,
  "height": 300,
  "background": "#f9f9f9",
  "params": [
    {
      "name": "metric",
      "value": "Water Stress pct change",
      "bind": {
        "input": "select",
        "options": [
          "Water Stress pct change",
          "Water Stress net change",
          "Water Stress 2021",
          "Water Stress 2001"
        ],
        "name": "Select Metric"
      }
    },
    {
      "name": "scaleDomain",
      "value": [-1, 0, 1],
      "update": "metric === 'Water Stress 2001' ? [0, 50, 100] : (metric === 'Water Stress 2021' ? [0, 50, 100] : (metric === 'Water Stress net change' ? [-50, 0, 50] : [-1, 0, 1]))"
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/SamBickelBarlow/SamBickelBarlow.github.io/refs/heads/main/Project/Chart%201/world-110m.json",
    "format": {"type": "topojson", "feature": "countries"}
  },
  "transform": [
    {"filter": "datum.id != 10"},
    {
      "lookup": "id",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/SamBickelBarlow/SamBickelBarlow.github.io/refs/heads/main/Project/Chart%201/id-to-iso3.csv"
        },
        "key": "id",
        "fields": ["ISO3", "COUNTRY"]
      }
    },
    {
      "lookup": "ISO3",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/SamBickelBarlow/SamBickelBarlow.github.io/refs/heads/main/Project/Chart%201/AQUASTAT_delta.csv"
        },
        "key": "ISO3",
        "fields": [
          "Water Stress pct change",
          "Water Stress net change",
          "Water Stress 2021",
          "Water Stress 2001"
        ]
      }
    },
    {
      "calculate": "datum[metric]",
      "as": "selectedMetric"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "fill": "lightgrey",
        "strokeWidth": 0.25
      },
      "encoding": {
        "tooltip": [{"field": "COUNTRY", "title": "Country"}]
      }
    },
    {
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.25
      },
      "encoding": {
        "color": {
          "field": "selectedMetric",
          "type": "quantitative",
          "scale": {
            "domain": {"expr": "scaleDomain"},
            "range": ["#2D4A9A", "#FFFFFF", "#D14C2F"]
          },
          "legend": {
            "title": "Water Stress Metric",
            "labelExpr": "metric === 'Water Stress 2001' || metric === 'Water Stress 2021' ? format(datum.value, '.0f') : (metric === 'Water Stress net change' ? format(datum.value, '.0f') : format(datum.value, '.0%'))"
          }
        },
        "tooltip": [
          {"field": "COUNTRY", "title": "Country"},
          {"field": "Water Stress pct change", "title": "Pct change in water stress", "format": ".1%"},
          {"field": "Water Stress net change", "title": "Net change in water stress", "format": ".1f"},
          {"field": "Water Stress 2021", "title": "Water Stress Score in 2021", "format": ".1f"},
          {"field": "Water Stress 2001", "title": "Water Stress Score in 2001", "format": ".1f"}
        ]
      }
    }
  ]
}
  ]
}
